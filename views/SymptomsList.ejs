    <script>

      function addCategoryToList() {
        var e = document.getElementById("gender");
        var gender = e.options[e.selectedIndex].text;
        e.selectedIndex = 0;

        var e = document.getElementById("age");
        var age = e.options[e.selectedIndex].text;
        e.selectedIndex = 0;

        var e = document.getElementById("size");
        var size = e.options[e.selectedIndex].text;
        e.selectedIndex = 0;

        var e = document.getElementById("weather");
        var weather = e.options[e.selectedIndex].text;
        e.selectedIndex = 0;

        var e = document.getElementById("quantity");
        var quantity = e.value;
        e.value = 0;

        var list = document.getElementById('clothes_categories');
        var entry = document.createElement('li');

        if (gender != "none" && age != "none" && size != "none" && weather != "none" && quantity > 0) {
          var e = document.getElementById("empty_war");
          if (e != null) {
            e.remove();
          }
          entry.appendChild(document.createTextNode(gender + " " + age + " " + size + " " + weather + " " + quantity));
          list.appendChild(entry);
        }
      };

    </script>